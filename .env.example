# Weekly Meal Planner - Environment Variables Configuration
# Copy this file to .env and update with your actual values

# ===========================
# Database Configuration
# ===========================
DB_NAME=meal_planner_db
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# ===========================
# Spring Boot Configuration
# ===========================
# Active profile: dev, test, or prod
SPRING_PROFILES_ACTIVE=prod

# ===========================
# Application Ports
# ===========================
# Backend API port
BACKEND_PORT=8080

# Frontend port
FRONTEND_PORT=3000

# ===========================
# JVM Configuration
# ===========================
# Java options for container environment
JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -XX:InitialRAMPercentage=50.0

# ===========================
# PgAdmin Configuration (Development only)
# ===========================
PGADMIN_EMAIL=admin@mealplanner.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ===========================
# CORS Configuration
# ===========================
# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# ===========================
# Logging Configuration
# ===========================
# Log level: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
